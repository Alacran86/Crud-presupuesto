<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Nuevo Usuario</h3>
                </div>
                <div class="card-body"> 
                    <form action="/authentication/signup" method="POST">
                    <div class="form-group">
                        <input type="text" name="fullname" placeholder="Nombre Completo" class="form-control" autofocus>
                    </div>
                        <div class="form-group">
                            <input type="text" name="username" placeholder="Ingresa tu usuario" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" placeholder="Password" class="form-group">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">Registrarse</button>
                                
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>


<div class="d-flex justify-content-center ml-auto">
    <div class="col-2">
 
        <a href="/" class="btn btn-primary btn-block mt-4">Retornar</a>
    
    </div>
</div>